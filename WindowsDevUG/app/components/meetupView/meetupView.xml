<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" navigatedTo="pageNavigatedTo">
 
    <TabView id="meetupTabView">
        <TabView.items>
          
            <TabViewItem title="What" iconSource="~/resources/UGIcon.png">
            <TabViewItem.view>
              <Image src="{{ meetupImageURL }}" />
            </TabViewItem.view>
          </TabViewItem>  
            
          <TabViewItem title="Details" iconSource="~/resources/PresentationIcon.png">
            <TabViewItem.view>
              <ScrollView>
              <StackLayout orientation="vertical" marginTop="20" marginLeft="20" marginRight="20">
                    <Label text="Topic:" cssClass="headerText" />
              		<Label text="{{ meetupTopic }}" textWrap="true" />
              		<Label text="Abstract:" cssClass="headerText" marginTop="15" />
                  	<Label text="{{ meetupAbstract }}" textWrap="true" />
                    <Label text="Specials:" cssClass="headerText" marginTop="15" />
              		<Label text="{{ meetupSpecials }}" textWrap="true" />  
              </StackLayout>  
              </ScrollView>  
            </TabViewItem.view>
          </TabViewItem>
          
          <TabViewItem title="Speaker" iconSource="~/resources/SpeakerIcon.png">
            <TabViewItem.view>
              <ScrollView>
              <StackLayout orientation="vertical" marginTop="20" marginLeft="20" marginRight="20">
                  	<Image src="{{ speakerImageURL }}" />
                    <Label text="Speaker:" cssClass="headerText" marginTop="15" />
              		<Label text="{{ speakerName }}" textWrap="true" />
              		<Label text="Twitter:" cssClass="headerText" marginTop="15" />
                  	<Label text="{{ speakerTwitter }}" textWrap="true" />
                    <Label text="Bio:" cssClass="headerText" marginTop="15" />
              		<Label text="{{ speakerBio }}" textWrap="true" />  
              </StackLayout>  
              </ScrollView>  
            </TabViewItem.view>
          </TabViewItem>
          
          <TabViewItem title="Ratings" iconSource="~/resources/RatingsIcon.png">
            <TabViewItem.view>
              <ScrollView>
              <StackLayout orientation="vertical" marginTop="20" marginLeft="20" marginRight="20">  
                  <Label text="Your feedback on the UG Meetup -" cssClass="headerText" marginTop="15" />
                  <Label text="Content Rating:" cssClass="headerText" marginTop="25" />
                  <Slider minValue="0" maxValue="5" value="{{ contentRating }}" />
                  <Label text="Speaker Rating:" cssClass="headerText" marginTop="15" />
                  <Slider minValue="0" maxValue="5" value="{{ speakerRating }}" />
                  <Label text="Logistcis Rating:" cssClass="headerText" marginTop="15" />
                  <Slider minValue="0" maxValue="5" value="{{ logisticsRating }}" />
                  <Label text="Additional Feedback:" cssClass="headerText" marginTop="20" />  
                  <TextView hint="Type your comments here .." text="{{ meetupFeedback }}" />
                  <Button text="Submit Ratings" marginTop="20" tap="ratingSubmission" />
                  <Label id="thanksLabel" text="Thank you for the feedback!" cssClass="headerText" marginTop="20" visibility="collapsed" /> 
              </StackLayout>  
              </ScrollView>      
            </TabViewItem.view>
          </TabViewItem>
            
        </TabView.items>
    </TabView>
    
</Page>