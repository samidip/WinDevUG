<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded">

    <GridLayout rows="auto, *">
        <widgets:action-bar />
        <StackLayout row="1">

            <GridLayout rows="auto,*" columns="*">
                <Image src="~/resources/WindowsDevUGLogo.png" cssClass="about-image" row="0" column="0" />

                <StackLayout row="0" column="1" horizontalAlignment="right" marginRight="20" marginTop="20">

                    <Label text="The Windows Developer User Group App" cssClass="label" />

                    <Label text="Version: Just Getting Started ..." cssClass="label" />

                </StackLayout>

                <StackLayout row="1" column="0" colspan="2">

                    <TextView text="By Developers, For Developers!" editable="false" />

                    <Button text="Contact us" tap="{{ onContactTap }}" tag="mailto:windowsdevug@live.com" />

                    <Button text="Follow us on Twitter" tap="{{ onTwitterTap }}" />

                </StackLayout>

            </GridLayout>
            <!-- additional view content -->

            <!-- START_CUSTOM_CODE_aboutView -->
            <!-- END_CUSTOM_CODE_aboutView -->
        </StackLayout>
    </GridLayout>
</Page>